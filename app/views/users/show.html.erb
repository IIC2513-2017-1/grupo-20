<div class="tag">
  <div class="container">
    <h2>Nombre de usuario: <%= @user.name %></h2>
    <div class="cards row">
      <p>Rifas creadas:</p>
      <% @user.rifas.each do |d| %>
      <div class="raffle">
        <h3> Rifa <%= d.title %>:<br></h3>
        <ul>
          <li>Premios:
          <% n_prizes = d.prizes.count() %>
          <% count = 0 %>
          <% d.prizes.each do |prize| %>
            <% count += 1 %>
            <% if count == n_prizes%>
                <%= prize.name + '.' %>
            <% else %>
                <%= prize.name + ', ' %>
            <%end%>
          <%end%>
        </li>
          <li>Fecha de inicio: <%= d.created_at %></li>
          <li>Fecha de de termino: <%= d.end_date %></li>
          <li>Precio: <%= d.price %></li>
          <li>Numeros restantes: <%= d.numbers%></li>
        </ul>
      </div>
      <% end %>
    <% if current_user%>
    <p><%= link_to 'Crear Rifa', new_user_rifa_path(current_user.id)%></p>
    <% end%>
    </div>
  </div>
</div>
