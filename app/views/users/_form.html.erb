<%= simple_form_for @user do |f| %>

    <%= f.label :name %><br>
    <%= f.input_field :name, placeholder: 'Enter username', error: 'Username error',
                      input_html: { class: 'my_class' } %><br>

    <%= f.label :mail %><br>
    <%= f.input_field :mail, placeholder: 'user@domain.com' %><br>

    <%= f.label :mail_confirmation %><br>
    <%= f.input_field :mail_confirmation, placeholder: 'user@domain.com' %><br>

    <%= f.label :password%><br>
    <%= f.input_field :password, hint: 'No special characters.'%><br>

    <%= f.label :password_confirmation %><br>
    <%= f.input_field :password_confirmation%><br>
    <%= f.button :submit %>
<% end %>