<div class="main">
  <div class="header">
    <h1>Rifas Maister</h1>
    <% if current_user%>
    <p><%="Usuario actual: #{current_user.name}"%></p>
    <%= link_to 'Perfil', user_path(current_user)%>
    <% end %>
    <ul>
      <% unless current_user%>
      <li><%= link_to 'Log in', login_path %></li>
      <li><%= link_to 'Sign up', new_user_path %></li>
      <% end %>
    </ul>
  </div>
  <div class="content-section">
    <h2>Explora Y Busca Rifas </h2>
    <% @rifas.each do |rifa| %>
        <div class="raffle">
          <h3> Rifa <%= rifa.title %>:<br></h3>
          <ul>
            <li>Premios:
            <% n_prizes = rifa.prizes.count() %>
            <% count = 0 %>
            <% rifa.prizes.each do |prize| %>
              <% count += 1 %>
              <% if count == n_prizes%>
                  <%= prize.name + '.' %>
              <% else %>
                  <%= prize.name + ', ' %>
              <%end%>
            <%end%>
            </li>
            <li>Due√±o: <%= rifa.owner %></li>
            <li>Fecha de inicio: <%= rifa.created_at %></li>
            <li>Fecha de de termino: <%= rifa.end_date %></li>
            <li>Precio: <%= rifa.price %></li>
            <li><%=link_to 'Comprar', rifa_path(rifa)%></li>
          </ul>
        </div>
    <% end %>
  </div>
</div>
