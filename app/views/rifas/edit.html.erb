<div class="create">
  <div class="container">
   	<%= form_for(@rifa) do |f| %>
  		<div class="field">
    		<%= f.label :Titulo %><br>
    		<%= f.text_area :title %><br>
        <%= f.label :Precio %><br>
    		<%= f.text_area :price %><br>
        <%= f.label :Numeros %><br>
    		<%= f.text_area :numbers %><br>
  		</div>
  		<div class="actions">
    		<%= f.submit "Guardar" %>
  		</div>
		<% end %>
  </div>
</div>
