<div class="blanck">
</div>
<div class="form-content">
  <%= simple_form_for(@rifa) do |f| %>
      <% if @rifa.title %>
        <h1 class="form-title">Edita tu Rifa</h1>
      <%else %>
        <h1 class="form-title">Crea tu Rifa</h1>
      <%end%>
      <%= f.input :title%>
      <%= f.input :price, error:"El precio debe oscilar entre $500 y $50.000" %>
      <%= f.input :numbers, error: 'La cantidad de números disponibles debe estar entre 10 y 5000' %>
      <%= f.input :end_date, :ampm => true, :minute_step => 15,
                  error: 'La fecha del sorteo debe terminar al menos en 1 semana desde hoy, y en no más de 6 meses '%>
      <div class="submit-div">
        <% if @rifa.title %>
          <%= f.button :submit,  "Edit", class:"btn" %>
        <%else %>
          <%= f.button :submit,  "Create", class:"btn" %>
        <%end%>
      </div>

  <% end %>
</div>