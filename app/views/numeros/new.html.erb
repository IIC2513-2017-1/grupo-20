<div class="tag">
  <div class="container">
        <div class="raffle-view">
          <h2> Rifa <%= @rifas.title %><br></h2>
          <ul>
            <div class="premios">
              <li>Premios:
                <% n_prizes = @rifas.prizes.count() %>
                <% count = 0 %>
                <% @rifas.prizes.each do |prize| %>
                  <% count += 1 %>
                  <% if count == n_prizes%>
                      <%= prize.name + '.' %>
                  <% else %>
                      <%= prize.name + ', ' %>
                  <%end%>
                <%end%>
              </li>
            </div>
            <li>Due√±o: <%= @rifas.owner %></li>
            <li>Fecha de inicio: <%= @rifas.created_at %></li>
            <li>Fecha de de termino: <%= @rifas.end_date %></li>
            <li>Precio: <%= @rifas.price %></li>
            <li>Numeros restantes: <%= @rifas.numbers%></li>
            <%if @comprados%>
            <li>Numeros comprados: <%= @comprados%></li>
            <%end%>
          </ul>
          <div class="create">
            <div class="container">
             	<%= form_for @numero, url: {controller: :numeros, action: :create} do |f| %>
            		<div class="field">
              		<%= f.label :Numero %><br>
              		<%= f.select :number, ((0..@rifas.numbers).reject{|i| i.in?(@comprados)}.map {|i| [i,i] }) %>
            		</div>
            		<div class="actions">
              		<%= f.submit "Comprar" %>
            		</div>
          		<% end %>
            </div>
          </div>
        </div>
  </div>
</div>
